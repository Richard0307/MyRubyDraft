<!-- CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<div class="container" style="display:flex; justify-content: space-between;">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
    <div class="card form-signin-card" style="width: 500px;">
      <div class="card-body">
        <div class="form-signin-header">
          <h2 class="form-signin-heading">Login</h2>
          <hr style="border-top: 2px solid black;">
        </div>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control mb-2", placeholder: "Email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control mb-2", placeholder: "Password" } %>
        <% if devise_mapping.rememberable? %>
          <div class="checkbox mb-3">
            <label>
              <%= f.check_box :remember_me %> Remember me
            </label>
          </div>
        <% end %>
        <%= f.button :submit, "Login", class: "btn btn-lg btn-primary btn-block" %>
        <%= render "devise/shared/links" %>
      </div>
    </div>

  <% end %>
  <div style="margin-left: 0px;">
    <%= image_pack_tag "logo_sheffield.jpg", style: "max-width: auto; height: auto;" %>

  </div>
</div>
