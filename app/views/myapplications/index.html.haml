<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
%h1 My Applications
%br
= link_to 'Add Applications', new_myapplication_path, class: 'btn btn-primary'
%table.table.table-hover
  %thead
    %tr
      %th Company
      %th Role
      %th Application deadline
      %th Status
      %th Date applied
      %th Location
      %th Actions
  %tbody
    - @myapplications.each do |myapplication|
      %tr
        %td= myapplication.company
        %td= myapplication.role
        %td= myapplication.application_deadline
        %td= myapplication.status
        %td= myapplication.date_applied
        %td= myapplication.location
        %td= link_to 'Edit', edit_myapplication_path(myapplication), class: 'btn btn-primary'
        %td= link_to 'Delete', myapplication_path(myapplication), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'


