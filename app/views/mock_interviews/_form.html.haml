<!-- CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

-# frozen_string_literal: true
= simple_form_for(@mock_interview) do |f|
  .card-body
    = f.input :interviewer_name, wrapper_html: { class: 'mb-3' }
    = f.input :feedback, wrapper_html: { class: 'mb-3' }
    = f.association :user, wrapper_html: { class: 'mb-3' }

  .card-footer.d-flex
    %button.btn.btn-primary{ type: 'submit' }
      Save
    = link_to 'Back', mock_interviews_path, class: 'btn btn-link ms-auto'
